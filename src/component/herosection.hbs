<div class="w-full md:flex">
  <div class="md:grow md:w-3/6 flex justify-center">
    <div class="my-16 space-y-3">
      <p>Welcome to weather app</p>
      <h1>Get The Latest
        <span class="text-blue-400">Weather</span>
        We Info Of Your City</h1>
      <button
        onclick="window.location.href='/weather';"
        class="w-36 h-8 border-2 rounded-full border-blue-400"
      >
        CHECK NOW
      </button>
    </div>
  </div>
  <div class="md:grow md:w-3/6 my-16">
    <!-- Implement the carousel -->
    <div class="relative mx-auto rounded-lg">
      <div class="slide relative">
        <img class="w-full h-[300px] object-cover" src="/images/wima.jpg" />

      </div>

      <div class="slide relative">
        <img
          class="w-full h-[300px] object-cover"
          src="/images/wima2.jpg"
        /></div>

      <div class="slide relative">
        <img class="w-full h-[300px] object-cover" src="/images/wima6.jpg" />
      </div>

      <!-- The previous button -->
      <a
        class="absolute left-0 top-1/2 p-4 -translate-y-1/2 bg-black/30 hover:bg-black/50 text-white hover:text-amber-500 cursor-pointer"
        onclick="moveSlide(-1)"
      >❮</a>

      <!-- The next button -->
      <a
        class="absolute right-0 top-1/2 p-4 -translate-y-1/2 bg-black/30 hover:bg-black/50 text-white hover:text-amber-500 cursor-pointer"
        onclick="moveSlide(1)"
      >❯</a>

    </div>
    <br />

    <!-- The dots -->
    <div class="flex justify-center items-center space-x-5">
      <div
        class="dot w-4 h-4 rounded-full cursor-pointer"
        onclick="currentSlide(1)"
      ></div>
      <div
        class="dot w-4 h-4 rounded-full cursor-pointer"
        onclick="currentSlide(2)"
      ></div>
      <div
        class="dot w-4 h-4 rounded-full cursor-pointer"
        onclick="currentSlide(3)"
      ></div>
    </div>
  </div>
</div>